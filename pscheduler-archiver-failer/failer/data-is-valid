#!/usr/bin/python
#
# Validate data for the failer archiver
#

import pscheduler

try:
    json = pscheduler.json_load()
    pscheduler.json_check_schema(json, 1)
except ValueError as ex:
    pscheduler.succeed_json({
        "valid": False,
        "reason": str(ex)
        })

data_validator = {

    "type": "object",
    "properties": {
        "schema": { "$ref": "#/pScheduler/Cardinal" },
        "fail": { "$ref": "#/pScheduler/Float" },
        "retry": { "$ref": "#/pScheduler/Float" }
    },
    "additionalProperties": False
}

valid, reason = pscheduler.json_validate(json, data_validator)

if not valid:
    pscheduler.succeed_json({
        "valid": False,
        "reason": reason
        })
    
pscheduler.succeed_json({ "valid": True })
