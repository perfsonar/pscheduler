#!/usr/bin/python
#
# Format a result
#

import jsontemplate
import pscheduler
import sys

from validate import result_is_valid


try:
   format = sys.argv[1]
except IndexError:
   format = 'text/plain'

input = pscheduler.json_load(exit_on_error=True, max_schema=1)

valid, message = result_is_valid(input["result"])

if not valid:
    pscheduler.fail(message)

json = input["result"]


if format == 'text/plain':

   fail_template = "Test failed."

   template = """
Slept ... {.section time-slept}{time-slept}{.or}Not Reported{.end}
   """

elif format == 'text/html':

   fail_template = "<p>Test failed.</p>"

   template = """
<table border="0">

<tr><td><b>Time Slept</b></td><td>
{.section time-slept}{time-slept}{.or}<i>Not Reported</i>{.end}
</td></tr>
</table>
   """

else:

   pscheduler.fail("Unsupported format '%s'" % format)


# TODO: Should probably handle exceptions in a nicer way.
print jsontemplate.expand(
   template if json['succeeded'] else fail_template,
   json).strip()
