        "interval": "PT2S",
        "ip-version": 4,
        "schema": 1,
        "source": "ps.example.com",
        "timeout": "PT1S"
    },
    "type": "rtt"
}
EOF
do_test tool/ping/duration 0 <<EOF
PT11S
EOF

# participant-data

make_input <<EOF
{
    "participant": 0,
    "test": {
        "spec": {
            "count": 10,
            "dest": "somehost.example.org",
            "interval": "PT2S",
            "ip-version": 4,
            "schema": 1,
            "source": "ps.example.com",
            "timeout": "PT1S"
        },
        "type": "rtt"
    }
}
EOF
