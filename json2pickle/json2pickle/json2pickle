#!/usr/bin/env python3
#
# json2pickle - Generate Python-pickled files from JSON
#
# See manual page for documentation.
#

import json
import pickle
import sys

try:
    input = json.load(sys.stdin)
except json.decoder.JSONDecodeError as ex:
    print(ex, file=sys.stderr)
    exit(1)

pickle.dump(input, sys.stdout.buffer)

exit(0)
