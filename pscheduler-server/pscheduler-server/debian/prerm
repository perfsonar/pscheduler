#!/bin/sh
# prerm script for pscheduler-server
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    remove|upgrade|deconfigure)
        # open debconf descriptors
        . /usr/share/debconf/confmodule
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

case "$1" in
    remove|upgrade|deconfigure)
        if [ -e /usr/share/apache2/apache2-maintscript-helper ]; then
            . /usr/share/apache2/apache2-maintscript-helper
            apache2_invoke disconf pscheduler-server.conf
        else
            rm -f /etc/apache2/conf.d/pscheduler-server.conf
        fi

        # stop pscheduler queries via web api for package removal
        service apache2 stop

        # stop all running requests
        service postgresql restart 3>/dev/null

        # drops the database if removing the package
        if [ -f /usr/share/dbconfig-common/dpkg/prerm.pgsql ]; then
            . /usr/share/dbconfig-common/dpkg/prerm.pgsql
            dbc_go pscheduler-server $@
        fi
    ;;
esac

exit 0
