#!/bin/sh
# postrm script for pscheduler-server
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge)
        # open debconf descriptors
        . /usr/share/debconf/confmodule

        # removes database config
        if [ -f /usr/share/dbconfig-common/dpkg/postrm.pgsql ]; then
            . /usr/share/dbconfig-common/dpkg/postrm.pgsql
            dbc_go pscheduler-server $@
        fi

        rm  -f /etc/pscheduler/database/database-password \
               /etc/pscheduler/database/database-dsn \
               /etc/pscheduler/database/pgpassfile
        rm -rf /var/log/pscheduler

        # handle large number of pscheduler connections
        if grep -sq '^max_connections = 500[^0-9]' /etc/postgresql/9.6/main/postgresql.conf; then
            sed -i 's/^max_connections = 500/max_connections = 100/' /etc/postgresql/9.6/main/postgresql.conf
            service postgresql restart 3>/dev/null
        fi

        # rsyslog config removed
        service rsyslog restart
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
