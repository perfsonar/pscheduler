#!/usr/bin/env python3
#
# Format a result
#

import pscheduler

from validate import result_is_valid
from validate import MAX_SCHEMA

TEMPLATE = '''
{% if _mime_type == 'text/plain' %}

Gateway Up ... {{ unspec(result.get('gateway-up')) }}
Network Up ... {{ unspec(result.get('network-up') }}

{% elif _mime_type == 'text/html' %}
<table>
  <tr><td >Gateway Up</td><td>{{ unspec(result.get('gateway-up')) }}</td></tr>
  <tr><td >Network Up</td><td>{{ unspec(result.get('network-up')) }}</td></tr>
</table>

{% else %}

{{ error('Unsupported MIME type "' + _mime_type + '"') }}

{% endif %}
'''

pscheduler.result_format_method(TEMPLATE, max_schema=MAX_SCHEMA, validator=result_is_valid)
