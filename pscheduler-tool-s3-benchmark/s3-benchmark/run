#!/usr/bin/env python3

#
# Development Order #5:
#
# This is the meat and bones of the tool, where the actual desired
# commands or operation will be run. The results are then recorded
# and added to the 'results' JSON data, which will then be sent
# back to the test. Both system and api are able to be used here.
#

import datetime
import subprocess
import json
import sys
import time

import pscheduler

# from stdin
input = pscheduler.json_load(exit_on_error=True)

# Take input from test spec
try:
    testtype = input['test']['spec']

except KeyError:
    pscheduler.fail('Missing data in input')

duration = input['test']['spec'].get('duration', 'PT5S')
duration = 'PT' + duration + 'S' # makes duration compatible with ISO time standard
duration = pscheduler.timedelta_as_seconds( pscheduler.iso8601_as_timedelta(duration) )
duration_argument = input['test']['spec'].get('duration') # program itself is expecting duration in a different format 
timeout_iso = input['test']['spec'].get('timeout', 'PT120S')
timeout = pscheduler.timedelta_as_seconds( pscheduler.iso8601_as_timedelta(timeout_iso) )
access_key = input['test']['spec'].get('access-key')
bucket = input['test']['spec'].get('bucket')
secret_key = input['test']['spec'].get('secret-key')
url = input['test']['spec'].get('url')
iterations = input['test']['spec'].get('iterations')
threads = input['test']['spec'].get('threads')
object_size = input['test']['spec'].get('object-size')
start_time = datetime.datetime.now()
succeeded = False
error = ''
diags = ''

# Run the actual task here:

argv = [
    's3-benchmark',
    '-a', access_key,
    '-s', secret_key,
    '-b', bucket,
    '-u', url
]
if iterations != None:
    argv.append('-l')
    argv.append(str(iterations))

if threads != None:
    argv.append('-t')
    argv.append(str(threads))

if object_size != None:
    argv.append('-z')
    argv.append(str(object_size))

if duration_argument != None:
    argv.append('-d')
    argv.append(str(duration_argument)) 
status, stdout, stderr = pscheduler.run_program(argv, timeout=timeout)

if status:
    succeeded = False
    error = "Error returned: \n%s" % stderr.strip('\n')
else:
    succeeded = True
    diags = stdout
end_time = datetime.datetime.now()

start_line = ""

for line in diags.split(','):
    if "url" in line:
        continue
    if "bucket" in line:
        continue
    if "region" in line:
        continue
    if "duration" in line:
        continue
    if "threads" in line:
        continue
    if "loops" in line:
        continue
    if "size" in line:
        start_line = line
        break
#loops = [[None]] * iterations
start = False
loop_counter = 0
loops = []
for i in range(iterations):
    loop = [i+1]
    loops.append(loop)
useful = False
end = False
for line in diags.split(','):
    if "Loop" in line:
        output = line.partition('\n')[2]
        #count_string = output.partition(':')[0]
        #loop_counter  = int(count_string.partition(" ")[2])
        loops[loop_counter].append(output)
        #print(loops[loop_counter])
        useful = True
        #loops[loop_counter] = loop_counter
        if "DELETE" in line:
            end = True
    elif useful == True:
        if "Slowdowns" in line:
            output = line.partition('sec.')[0]
            loops[loop_counter].append(output)
            useful = False
            if end == True:
                loop_counter += 1
                end = False
        else:
            loops[loop_counter].append(line)
    else:
        continue        
for i, loop in enumerate(loops):
    new_loop = []
    loop_num_str = loop[1].partition(':')[0]
    loop_num = int(loop_num_str.partition(" ")[2])
    new_loop.append(loop_num)
    put_time = loop[1].partition("time")[2][1:]
    new_loop.append(put_time)
    print(loop)
    objects = loop[2].partition('=')[2][1:]
    new_loop.append(objects)
    speed = loop[3].partition('=')[2][1:]
    new_loop.append(speed)
    operations = loop[4].strip().partition("operations")[0].strip()
    new_loop.append(operations)
    get_time = loop[5].partition("time")[2][1:]
    new_loop.append(get_time)
    objects = loop[6].partition('=')[2][1:]
    new_loop.append(objects)
    speed = loop[7].partition('=')[2][1:]
    new_loop.append(speed)
    operations = loop[8].strip().partition("operations")[0].strip()
    new_loop.append(operations)
    delete_time = loop[9].partition("time")[2][1:]
    new_loop.append(delete_time)
    deletes = loop[10].strip().partition("deletes")[0].strip()
    new_loop.append(deletes)
    loops[loop_num - 1] = new_loop   

# Organize results into json data
results = {
    'succeeded': succeeded,
    'result': {
        'schema': 1,
        'time': pscheduler.timedelta_as_iso8601( end_time - start_time),
        'succeeded': succeeded
    },
    'error': error,
    'diags': diags,
    'loops': loops }

pscheduler.succeed_json(results)
