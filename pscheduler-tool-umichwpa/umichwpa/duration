#!/usr/bin/env python3

#
# Development Order #4:
#
# Determine the duration of a specified test.
#

#
# TODO: This is a bare-bones, unreliable implementation that should be
# used only for testing.
#

import datetime

import pscheduler

json = pscheduler.json_load(exit_on_error=True);

        
timeout_iso = json.get("timeout", "PT10S")
timeout = pscheduler.iso8601_as_timedelta(timeout_iso) + datetime.timedelta(seconds=5)

pscheduler.succeed_json({
    "duration": pscheduler.timedelta_as_iso8601( timeout )
    })
